<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/commentPhoto"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/nophoto"
        android:maxHeight="50dp"
        android:maxWidth="50dp"
        android:minHeight="50dp"
        android:minWidth="50dp"
        android:adjustViewBounds="true"
        android:nestedScrollingEnabled="true"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="username"
        android:id="@+id/commentUsername"
        android:maxLines="1"
        android:minLines="1"
        android:layout_below="@+id/commentPhoto"
        android:layout_alignLeft="@+id/commentPhoto"
        android:layout_alignStart="@+id/commentPhoto"
        android:maxWidth="70dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="comment here max 2 line"
        android:id="@+id/commentary"
        android:layout_alignTop="@+id/commentPhoto"
        android:layout_toRightOf="@+id/commentPhoto"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:maxLines="2"
        android:maxWidth="270dp"
        android:maxHeight="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Date"
        android:id="@+id/commentDate"
        android:layout_alignTop="@+id/commentUsername"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp" />

</RelativeLayout>
