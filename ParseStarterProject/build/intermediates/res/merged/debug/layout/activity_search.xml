<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#f0e5da"
    android:id="@+id/relative">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Find Your Study Group"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="80dp" />

    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/courseEditText"
        android:hint="Course"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="180dp" />

    <ListView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/courseListView"
        android:layout_below="@+id/courseEditText"
        android:layout_centerHorizontal="true"
        android:background="#ffffff"
        android:layout_above="@+id/buttonBar" />

    <EditText
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/numEditText"
        android:hint="Select Subject First"
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/courseEditText"
        android:layout_alignStart="@+id/courseEditText" />



    <ListView
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:id="@+id/numListView"
        android:layout_below="@+id/numEditText"
        android:layout_alignLeft="@+id/numEditText"
        android:layout_alignStart="@+id/numEditText"
        android:layout_above="@+id/buttonBar"
        android:background="#ffffff" />


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignTop="@+id/numEditText"
        android:layout_above="@+id/buttonBar">

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:id="@+id/grpSearchbtn"
            android:layout_below="@+id/numEditText"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="90dp"
            android:onClick="grpSearchBtn"
            android:layout_marginLeft="150dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/buttonBar"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        style="@android:style/ButtonBar"
        android:gravity="center"
        android:background="#fff56770">

        <Button
            android:id="@+id/searchBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Search"
            android:background="#f56770"
            android:textColor="#bfbfbf" />

        <Button android:id="@+id/createBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#f56770"
            android:text="Create"
            android:textColor="#ffffff"
            android:onClick="createBtn" />

        <Button
            android:id="@+id/myGroupBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#f56770"
            android:text="My
Group"
            android:textColor="#ffffff"
            android:onClick="myGroupBtn"
            android:nestedScrollingEnabled="true" />

        <Button android:id="@+id/settingBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="#f56770"
            android:text="Setting"
            android:textColor="#ffffff"
            android:onClick="settingBtn"
            />
    </LinearLayout>


</RelativeLayout><!-- From: file:/Users/taehongmin/AndroidStudioProjects/st/ParseStarterProject/src/main/res/layout/activity_search.xml -->